<UserControl x:Class="ProductMonitor.UserControls.RederUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProductMonitor.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid x:Name="LayGrid">
        <Canvas x:Name="mainCanvas"></Canvas>

        <!--图案-->
        <Polygon x:Name="P1"
                 Stroke="#22ffffff" />
        <Polygon x:Name="P2"
                 Stroke="#22ffffff" />
        <Polygon x:Name="P3"
                 Stroke="#22ffffff" />
        <Polygon x:Name="P4"
                 Stroke="#22ffffff" />

        <!--数据-->
        <Polygon x:Name="P5"
                 Stroke="Orange"
                 Fill="#550091f0" />
    </Grid>
</UserControl>
